%%% -*- mode: erlang -*-

{require_otp_vsn, "R15|R16|17|18"}.

%% Depends
{deps_dir, "../"}.
{deps, [{lager, ".*"}]}.

%% Erlang files to compile before the rest.
{erl_first_files, ["src/ubf_gdss_plugin.erl"]}.

%% Erlang compiler options
{erl_opts, [debug_info,
            warnings_as_errors,
            {parse_transform, lager_transform},
            {i, "./ebin/"},
            {i, "../ubf/include/"},
            {i, "../gmt_util/include/"},
            {platform_define, "R13", 'old_filename'}
           ]}.

%% EUnit options
{eunit_opts, [verbose]}.
